        "outcomesModule": {
            "primaryOutcomes": [
                {
                    "measure": "Investigate validity of PAMSys wrist sensor and pendant sensor as monitoring biomarker of upper and lower limb function and physical activity, including leg function, change in IBM patients.",
                    "description": "will investigate if sensor-derived parameters measured by the PAMSys wrist sensors and pendant sensor can quantify disease severity and track subtle changes in upper and lower limb health and ambulation over time.",
                    "timeFrame": "Baseline, Month 6, Month 12"
                }
            ]
        },
        "eligibilityModule": {
