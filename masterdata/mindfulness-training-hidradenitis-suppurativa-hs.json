        "armsInterventionsModule": {
            "armGroups": [
                {
                    "label": "Mindfulness Course Group",
                    "type": "EXPERIMENTAL",
                    "description": "Participants will participate in the mindfulness course that would last 6 weeks.",
                    "interventionNames": [
                        "Behavioral: Mindfulness Course"
                    ]
                },
                {
                    "label": "HS Educational Course Group",
                    "type": "EXPERIMENTAL",
                    "description": "Participants will participate in the mindfulness course that would last 6 weeks.",
                    "interventionNames": [
                        "Behavioral: HS Educational Course"
                    ]
                }
            ],
            "interventions": [
                {
                    "type": "BEHAVIORAL",
                    "name": "Mindfulness Course",
                    "description": "Participants will attend a weekly 1.5-hour class over a 6-week period via Zoom. Participants will also be required to listen to guided practice audio recordings that are 12-20 minutes long and complete a weekly homework log detailing all audio recordings completed.",
                    "armGroupLabels": [
                        "Mindfulness Course Group"
                    ]
                },
                {
                    "type": "BEHAVIORAL",
                    "name": "HS Educational Course",
                    "description": "Participants will meet for 10 -15 minutes once a week over a 6-week period. The course will be administered verbally or with the use of PowerPoint slides.",
                    "armGroupLabels": [
                        "HS Educational Course Group"
                    ]
                }
            ]
        },
        "outcomesModule": {
            "primaryOutcomes": [
                {
                    "measure": "HS Quality of Life Measure (HiSQOL) Scores",
                    "description": "HS quality of life (HiSQOL) has a total score ranging from 0 to 68, with higher scores indicating more severe impact on participant's quality of life",
                    "timeFrame": "Up to 10 weeks"
                }
            ],
            "secondaryOutcomes": [
                {
                    "measure": "Dermatology Life Quality Index (DLQI) Scores",
                    "description": "Dermatology Life Quality Index (DLQI) has a total score ranging from 0 to 30 with the lower score indicating higher health related quality of life",
                    "timeFrame": "Up to 10 weeks"
                },
                {
                    "measure": "Number of participants at each Refined Hurley Classification",
                    "description": "The Hurley Classification is staged as: 1 (single or multiple abscesses without sinus tract formation or scarring); 2 (recurrent abscesses with one or more sinus tracts and scarring widely separated by normal skin); 3 (diffuse involvement with multiple sinus tracts and no intervening normal skin).",
                    "timeFrame": "Up to 10 weeks"
                },
                {
                    "measure": "Hidradenitis Suppurativa Physician's Global Assessment Scale (HS-PGA) Scores",
                    "description": "HS Physician's Global Assessment (HS-PGA) Scale is a 6-point Likert scale from 0 (clear) to 5 (very severe). Total score ranges from 0 to 30 with the higher score indicating more severe HS symptoms",
                    "timeFrame": "Up to 10 weeks"
                },
                {
                    "measure": "Five-Facet Mindfulness Questionnaire - Short Form (FFMQ-SF) Scores",
                    "description": "FFMQ-SF has total scores ranging from 15 to 75. Higher scores indicate greater levels of mindfulness.",
                    "timeFrame": "Up to 10 weeks"
                },
                {
                    "measure": "Pain Visual Analog Scale (VAS) Scores",
                    "description": "Pain VAS has a range from 0 to 10 with a higher score indicating worse pain",
                    "timeFrame": "Up to 10 weeks"
                },
                {
                    "measure": "Sleep Quality Scale (SQS) Scores",
                    "description": "Sleep Quality Scale (SQS) has a score ranging from 0-10 with a greater score indicating greater sleep quality",
                    "timeFrame": "Up to 10 weeks"
                },
                {
                    "measure": "Number of Pain medication Usage",
                    "description": "Patient reported number of pain medications used by participants in the past week",
                    "timeFrame": "Up to 10 weeks"
                },
                {
                    "measure": "Number of work/school days missed",
                    "description": "Patient reported number of work/school days missed in the past week",
                    "timeFrame": "Up to 10 weeks"
                },
                {
                    "measure": "Number of visits to the emergency room",
                    "description": "Patient reported number of visits to the emergency room in the past week",
                    "timeFrame": "Up to 10 weeks"
                }
            ]
        },
        "eligibilityModule": {
            "eligibilityCriteria": "Inclusion Criteria:\n\n* Hidradenitis Suppurativa patients registered in the University of Miami Hospital dermatology system. Patients can have lesions present at the time of study participation\n\nExclusion Criteria:\n\n* Individuals with any of the following: active drug addictions, untreated Post Traumatic Stress Disorder (PTSD), psychosis or suicidal ideations\n* Adults unable to consent\n* Pregnant women\n* Prisoners\n* Individuals below the age of 18 years old\n* Individuals who do not speak English",
