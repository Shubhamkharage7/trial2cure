        "outcomesModule": {
            "primaryOutcomes": [
                {
                    "measure": "Fetal Hemoglobin (HbF) Response Following Six Months of Hydroxyurea Therapy",
                    "description": "The primary outcome will be HbF response six months after starting hydroxyurea therapy with the hypothesis that participants in the Alternative Arm (PK-guided starting dose) will have at least 5% higher HbF than the Standard Arm (20 mg/kg starting dose)",
                    "timeFrame": "6 months after starting daily hydroxyurea therapy"
                }
            ],
            "secondaryOutcomes": [
                {
                    "measure": "F Cells",
                    "description": "In addition to traditional %HbF measurement, F cells will be measured at baseline, 6 months, and 12 months",
                    "timeFrame": "Baseline, 6 and 12 months after initiating daily hydroxyurea therapy"
                },
                {
                    "measure": "Gene Expression Patterns of Study Participants",
                    "description": "The epigenomic signature and gene expression patterns of study participants receiving hydroxyurea therapy at MTD. MTD is defined as a stable dose without any dose increases (except to account for weight gain), holds, or decreases within 8 weeks with laboratory criteria within the target range. This outcome will explain the mechanisms that yield high HbF responses.",
                    "timeFrame": "6 Months after initial Hydroxyurea therapy"
                }
            ]
        },
        "eligibilityModule": {
            "eligibilityCriteria": "Inclusion Criteria:\n\n* Diagnosis of sickle cell anemia (HbSS, HbSD, HbS/\u03b20-thalassemia, or similarly severe SCA genotype)\n* Age 6 months to 21 years at the time of enrollment\n* Clinical decision by patient, family, and healthcare providers to initiate hydroxyurea therapy\n\nExclusion Criteria:\n\n* Current treatment with chronic, monthly blood transfusions or erythrocytapheresis\n* Treatment with hydroxyurea within the past 3 months\n* Hemoglobin SC disease, HbS/\u03b2+-thalassemia\n* Current treatment with other investigational sickle cell medications\n* Current known pregnancy or lactation",
            "healthyVolunteers": false,
            "sex": "ALL",
