        "armsInterventionsModule": {
            "armGroups": [
                {
                    "label": "Standard Arm",
                    "type": "ACTIVE_COMPARATOR",
                    "description": "Participants randomized to the standard arm will receive a starting dose of hydroxyurea of 20 mg/kg/day.",
                    "interventionNames": [
                        "Drug: Hydroxyurea"
                    ]
                },
                {
                    "label": "Alternative Arm",
                    "type": "EXPERIMENTAL",
                    "description": "Participants randomized to the alternative arm will receive a pharmacokinetic guided starting dose of hydroxyurea based on PK labs drawn at a baseline visit to target an area under the curve (AUC) of 115 mg\\*h/L in an attempt to approximate maximum tolerated dose (MTD). This dose will not exceed the maximum tolerated dose of 35 mg/kg/day.",
                    "interventionNames": [
                        "Drug: Hydroxyurea"
                    ]
                }
            ],
            "interventions": [
                {
                    "type": "DRUG",
                    "name": "Hydroxyurea",
                    "description": "The alternative arm will use PK data to choose a starting hydroxyurea dose to achieve an AUC of 115 mg\\*h/L to approximate maximum tolerated dose. On the standard arm, participants will start at the traditional, weight-based dose of 20 mg/kg/day. Following selection of the starting dose, all participants will follow the same dose escalation and laboratory monitoring procedures.",
                    "armGroupLabels": [
                        "Alternative Arm",
                        "Standard Arm"
                    ]
                }
            ]
