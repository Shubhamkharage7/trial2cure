        "armsInterventionsModule": {
            "armGroups": [
                {
                    "label": "Treatment",
                    "type": "EXPERIMENTAL",
                    "interventionNames": [
                        "Drug: Naltrexone (Vivitrol)",
                        "Drug: Bupropion"
                    ]
                }
            ],
            "interventions": [
                {
                    "type": "DRUG",
                    "name": "Naltrexone (Vivitrol)",
                    "description": "At week 1 the Nurse Practitioner will administer extended-release naltrexone via intramuscular gluteal injection supplied as a standard single-use kit containing 380-mg vial of Vivitrol microspheres. Only one naltrexone injection will be administered over the course of the study",
                    "armGroupLabels": [
                        "Treatment"
                    ]
                },
                {
                    "type": "DRUG",
                    "name": "Bupropion",
                    "description": "Oral bupropion will be titrated to 450 mg over the course of 3 days. One week's supply of the study medication will be dispensed at each visit. Cell-phone assisted remote observation of medication adherence (CAROMA) will be used to assess compliance. Following Week 3, participants will be provided with enough pills to titrate the dose of bupropion over a period of 4 days. Therefore, participants will receive bupropion pills 3 weeks plus 4 additional days to titrate down the dose.",
                    "armGroupLabels": [
                        "Treatment"
                    ]
                }
            ]
        },
        "outcomesModule": {
            "primaryOutcomes": [
                {
                    "measure": "Feasibility as assessed by the percentage of participants that enroll in the study",
                    "timeFrame": "end of treatment (week 3)"
                },
                {
                    "measure": "Percentage of participants that complete 3 weeks of treatment",
                    "timeFrame": "end of treatment (week 3)"
                },
                {
                    "measure": "Safety as assessed by the percentage of participants that show no serious adverse events",
                    "timeFrame": "end of treatment (week 3)"
                }
            ],
            "secondaryOutcomes": [
                {
                    "measure": "Change in number of cigarettes smoked per day (CPD)",
                    "timeFrame": "Baseline, end of treatment (week 3)"
                },
                {
                    "measure": "Change in smoking urges as assessed by the Questionnaire on Smoking Urges (QSU)",
                    "description": "This is a 10 item questionnaire and each is cored from 0(strongly disagree) to 10(strongly agree) for a maximum score of 100, higher score indicating more smoking urge",
                    "timeFrame": "Baseline, end of treatment (week 3)"
                },
                {
                    "measure": "Reduction in number of cigarettes consumed when price is at 0 as assessed by the Cigarette Purchasing Task (CPT)",
                    "description": "This will utilize a hypothetical purchasing task, which will assess hypothetical purchase and consumption of cigarettes as a function of increasing cigarette price.",
                    "timeFrame": "Baseline, end of treatment (week 3)"
                },
                {
                    "measure": "Change in psychiatric symptoms as assessed by the score on the Brief Psychiatric Rating Scale (BPRS)",
                    "description": "This is an 18 item questionnaire and each is scores from 1 (not present) to 7 (extremely severe),with a total score between 18 and 126, higher number indicating worse outcome",
                    "timeFrame": "Baseline, end of treatment (week 3)"
                }
            ]
        },
        "eligibilityModule": {
            "eligibilityCriteria": "Inclusion Criteria:\n\n* fluent in English;\n* Diagnosed with schizophrenia spectrum disorder that is currently stable;\n* Report regular cigarette smoking, average cigarette per day \u2265 5 in the past 4 weeks, and present a breath CO\u226510 ppm.\n* Meet subjective and objective (urinary drug screen) measures of non-opioid use.\n* If female, present a negative pregnancy test, not be currently breast feeding, and agree to use acceptable birth control methods and receive periodic pregnancy tests during the course of the study.\n* Able to give written informed consent\n* Obtain an Evaluation to Sign Consent (ESC) score above 10.\n\nExclusion Criteria.\n\n* Have suicidal or homicidal ideation requiring immediate attention.\n* Previous use of bupropion or naltrexone in the past 30 days.\n* Currently enrolled in treatment for tobacco use.\n* Meet Diagnostic and Statistical Manual of Mental Disorders (DSM-5 )criteria for alcohol and other substance use disorders excluding nicotine and marijuana.\n* Report a history of epilepsy, seizure disorder or condition increasing risk of seizure, or head trauma with neurological sequelae.\n* Have a current eating disorder.\n* Be medically unstable or taking medications that are contraindicated with using naltrexone or bupropion.",
