        "armsInterventionsModule": {
            "armGroups": [
                {
                    "label": "Usual Care Group",
                    "type": "NO_INTERVENTION",
                    "description": "Usual care as determined by the patient's primary team. Initiation and daily dosing of corticosteroid treatment will be based on clinicians' preference and clinicians."
                },
                {
                    "label": "Individualized dosing strategy",
                    "type": "EXPERIMENTAL",
                    "description": "Biomarker guided corticosteroid use. Initiation of corticosteroid will be recommended based on the an individual treatment rule (ITR) and subsequent dosing of corticosteroid will be recommended based on daily CRP values till CRP \\<50 mg/L.",
                    "interventionNames": [
                        "Drug: Dexamethasone"
                    ]
                }
            ],
            "interventions": [
                {
                    "type": "DRUG",
                    "name": "Dexamethasone",
                    "description": "Administered intravenously or orally based on daily CRP values and CRP corticosteriod dosing algorithm",
                    "armGroupLabels": [
                        "Individualized dosing strategy"
                    ]
                }
            ]
        },
        "outcomesModule": {
