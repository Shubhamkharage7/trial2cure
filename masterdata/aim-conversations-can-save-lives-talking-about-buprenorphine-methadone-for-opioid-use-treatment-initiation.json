        "outcomesModule": {
            "primaryOutcomes": [
                {
                    "measure": "Uptake of Talk About It (1)",
                    "description": "Clinician report of Talk About It usage in preceding 12 months",
                    "timeFrame": "At 18 months"
                },
                {
