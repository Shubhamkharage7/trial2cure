        "armsInterventionsModule": {
            "armGroups": [
                {
                    "label": "Active tDCS + bimanual training",
                    "type": "EXPERIMENTAL",
                    "description": "In this arm, participants will engage in 120 min of bimanual training. Bimanual training involves using both hands to play with toys and games during the study. During the first 20 min of bimanual training, participants will receive active tDCS via sponges over the scalp.",
                    "interventionNames": [
                        "Device: active transcranial direct current stimulation",
                        "Behavioral: bimanual training"
                    ]
                },
                {
                    "label": "Sham tDCS + bimanual training",
                    "type": "EXPERIMENTAL",
                    "description": "In this arm, participants will engage in 120 min of bimanual training. Bimanual training involves using both hands to play with toys and games during the study. During the first 20 min of bimanual training, participants will wear the tDCS device that is worn by the active tDCS group, but in the sham group, participants will not receive stimulation during this 20 min period.",
                    "interventionNames": [
                        "Behavioral: bimanual training"
                    ]
                }
            ],
            "interventions": [
                {
                    "type": "DEVICE",
                    "name": "active transcranial direct current stimulation",
                    "description": "Participants will receive 20 min of tDCS over the scalp during the first 20 min of bimanual training.",
                    "armGroupLabels": [
                        "Active tDCS + bimanual training"
                    ]
                },
                {
                    "type": "BEHAVIORAL",
                    "name": "bimanual training",
                    "description": "Participants will engage in movements that use both hands, by playing with toys and games.",
                    "armGroupLabels": [
                        "Active tDCS + bimanual training",
                        "Sham tDCS + bimanual training"
                    ]
                }
            ]
        },
        "outcomesModule": {
            "primaryOutcomes": [
