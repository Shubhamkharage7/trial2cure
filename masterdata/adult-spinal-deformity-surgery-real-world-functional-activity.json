        "armsInterventionsModule": {
            "armGroups": [
                {
                    "label": "Activity Monitor Assessment",
                    "type": "OTHER",
                    "description": "Subjects will be assessed in the Motion Analysis Laboratory at Mayo Clinic Rochester and have activity monitored in the free-living environment.",
                    "interventionNames": [
                        "Device: Triaxial accelerometer"
                    ]
                }
            ],
            "interventions": [
                {
                    "type": "DEVICE",
                    "name": "Triaxial accelerometer",
                    "description": "Monitors placed on the waist, thigh, and bilateral ankles. Accelerometry will measure patients' physical activities in the free-living environment for 4 consecutive days. The patients will wear the monitor during waking hours and remove it during sleeping, showering, and swimming time.",
                    "armGroupLabels": [
                        "Activity Monitor Assessment"
                    ]
                }
            ]
        },
        "outcomesModule": {
            "primaryOutcomes": [
                {
                    "measure": "Motion Analysis Lab - Change in function",
                    "description": "Spatiotemporal measures including velocity, step/stride length, step width, single/double support times, and R/L temporal symmetriesm will be used to measure function.",
                    "timeFrame": "Baseline, 6-12 weeks post-surgery, 1 year"
                },
                {
                    "measure": "Motion Analysis Lab - Change in gait",
                    "description": "Gait will be measured by segmental and joint range of motion, peak kinetics during walking, and changes in deviation from normal bands using sensory processing measures.",
                    "timeFrame": "Baseline, 6-12 weeks post-surgery, 1 year"
                },
                {
                    "measure": "Motion Analysis Lab - Change in trunk stability",
                    "description": "Trunk stability will be measured by EMG frequency content and activation pattern during gait and postural sway.",
                    "timeFrame": "Baseline, 6-12 weeks post-surgery, 1 year"
                }
            ]
        },
        "eligibilityModule": {
            "eligibilityCriteria": "Inclusion Criteria:\n\n* Diagnosis of degenerative thoracolumbar deformity\n* Deformity correction surgery scheduled with either Dr. Elder or Dr. Fogelson, minimum 4-level fusion with fixation to the pelvis.\n\nExclusion Criteria:\n\n\u00b0 Unable to return to Mayo Clinic for follow-up evaluation",
