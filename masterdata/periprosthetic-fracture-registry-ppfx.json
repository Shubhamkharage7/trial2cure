        "outcomesModule": {
            "primaryOutcomes": [
                {
                    "measure": "Classification of the fracture",
                    "description": "Classification of the fracture using the UCS and some parts of the AO/OTA fracture classification system.",
                    "timeFrame": "Pre-operatively (Day -1)"
                }
            ],
            "secondaryOutcomes": [
                {
                    "measure": "Fracture mechanism",
                    "description": "High / low energy trauma, pathological fracture, stem stability",
                    "timeFrame": "Pre-operatively (Day -1)"
                },
                {
                    "measure": "Rehabilitation program",
                    "description": "weight bearing, bedrest, splint",
                    "timeFrame": "Up to 12 months"
                },
                {
                    "measure": "Function of hip or knee",
                    "description": "Harris Hip Score or Knee Society score",
                    "timeFrame": "Up to 12 months"
                },
                {
                    "measure": "Health related quality of life",
                    "description": "PROMIS pain interference and physical activity",
                    "timeFrame": "Up to 12 months"
                },
                {
                    "measure": "Fracture healing",
                    "description": "by RUSH or RUST score",
                    "timeFrame": "Up to 12 months"
                },
                {
                    "measure": "pain visual analog scale (VAS) and pain medication",
                    "description": "Using the pain visual analog scale (VAS) and pain medication",
                    "timeFrame": "Up to 12 months"
                }
            ]
        },
        "eligibilityModule": {
            "eligibilityCriteria": "Inclusion Criteria:\n\n* Age \u226518 years\n\n  * Post-operative PPFx after total or hemi hip or total or unicondylar knee arthroplasty (including the acetabulum, femur, patella and proximal tibia) requiring\n\n    * osteosynthesis alone or\n    * component revision plus plate/nail osteosynthesis\n  * Informed consent obtained, i.e.:\n\n    * Ability of the patient or assigned representative to understand the content of the patient information / Informed Consent Form\n    * Signed and dated EC / IRB approved written informed consent\n  * Ability to attend post-operative follow up visits\n\nExclusion Criteria:\n\n* Pregnancy or women planning to conceive within the study period\n* Prisoner",
            "healthyVolunteers": false,
            "sex": "ALL",
            "minimumAge": "18 Years",
            "stdAges": [
                "ADULT",
                "OLDER_ADULT"
            ],
            "studyPopulation": "Patients with total or hemi hip or knee arthroplasty and who have a fracture around one of the arthroplasty",
            "samplingMethod": "NON_PROBABILITY_SAMPLE"
        },
