        "outcomesModule": {
            "primaryOutcomes": [
                {
                    "measure": "The number of participants who complete scheduled study visits",
                    "description": "The study will evaluate the feasibility of conducting a randomized clinical trial studying the impact of early referral to psychiatry (versus no referral) on depression and anxiety symptoms in patients with musculoskeletal sarcoma by examining the rates of eligibility, acceptance, uptake rate, and adherence.",
                    "timeFrame": "2 years"
                }
            ]
