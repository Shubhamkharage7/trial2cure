        "outcomesModule": {
            "primaryOutcomes": [
                {
                    "measure": "Pain reporting",
                    "description": "Daily pain severity reporting on rating scale from 0 to 10 (greater values indicate greater pain)",
                    "timeFrame": "14 days"
                },
                {
                    "measure": "Pain sensitivity",
                    "description": "Pain thresholds to mechanical and temperature stimuli measured in kPa (pressure) and Celsius (heat). Lower values indicate lower pain thresholds.",
                    "timeFrame": "1 day"
                },
                {
                    "measure": "Central pain modulation",
                    "description": "Capacity of the CNS to modulate pain",
                    "timeFrame": "1 day"
                },
                {
                    "measure": "Wearable based sleep characteristics",
                    "description": "Estimation of sleep duration, fragmentation, regularity based on actigraphy",
                    "timeFrame": "2 weeks"
                },
                {
                    "measure": "PSG based sleep characteristics",
                    "description": "Sleep stages and architecture based on PSG",
                    "timeFrame": "1 day"
                }
            ]
        },
